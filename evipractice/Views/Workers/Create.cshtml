@model WorkerInputModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12">
        <form asp-action="Create" asp-controller="Workers" method="post" enctype="multipart/form-data">
            <h3>Create new worker</h3>

            <div class="form-group row mb-1">
                <label asp-for="Name" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="Name" class="form-control form-control-sm" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="ContactNo" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="ContactNo" class="form-control form-control-sm" />
                    <span asp-validation-for="ContactNo" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Skill" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <select type="text" asp-for="Skill" class="form-select form-select-sm" asp-items="@Html.GetEnumSelectList<Skill>()">
                        <option value="">Select one</option>
                    </select>
                    <span asp-validation-for="Skill" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="PayRate" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="PayRate" class="form-control form-control-sm" />
                    <span asp-validation-for="PayRate" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="HireDate" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="date" asp-for="HireDate" class="form-control form-control-sm" />
                    <span asp-validation-for="HireDate" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Picture" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="file" asp-for="Picture" class="form-control form-control-sm" />
                    <span asp-validation-for="Picture" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="IsActive" class="col-form-label col-form-label-sm col-2"></label>
                <div class="col-4">
                    <input type="checkbox" asp-for="IsActive" />

                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-6">
                    <div class="d-flex align-items-center">
                        <h4>Work logs</h4>
                        <span style="flex:1 1 auto;"></span>
                        <button type="submit" name="operation" value="add" class="btn btn-secondary btn-sm" formnovalidate>Add</button>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Start date</th>
                                <th>End date</th>
                                <th>Description</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.WorkLogs.Count; i++)
                            {
                                <tr style="vertical-align:top">
                                    <td>
                                        <input type="date" asp-for="@Model.WorkLogs[i].StartDate" class="form-control form-control-sm" />
                                        <span asp-validation-for="@Model.WorkLogs[i].StartDate" class="text-danger small"></span>
                                    </td>
                                    <td>
                                        <input type="date" asp-for="@Model.WorkLogs[i].EndDate" class="form-control form-control-sm" />
                                        <span asp-validation-for="@Model.WorkLogs[i].EndDate" class="text-danger small"></span>
                                    </td>
                                    <td>
                                        <input type="text" asp-for="@Model.WorkLogs[i].Description" class="form-control form-control-sm" />
                                        <span asp-validation-for="@Model.WorkLogs[i].Description" class="text-danger small"></span>
                                    </td>
                                    <td style="width:70px; text-align:right">
                                        <button name="operation" type="submit" class="btn btn-danger btn-sm" value="remove_@i" formnovalidate>Del</button>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-6 text-end">
                    <button type="submit" class="btn btn-primary" name="operation" value="insert">Save</button>

                </div>
            </div>
        </form>
    </div>
    <div class="col-12">
        <a asp-action="Index" class="btn-link">Back to list</a>
    </div>
</div>

